{
  "name": "aide",
  "version": "0.0.4",
  "description": "AI agent toolkit",
  "author": {
    "name": "Robb Currall",
    "url": "https://github.com/rlcurrall"
  },
  "license": "MIT",
  "homepage": "https://github.com/rlcurrall/aide",
  "repository": "https://github.com/rlcurrall/aide",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "aide prime"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "aide prime"
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "aide prime"
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "aide prime"
          }
        ]
      }
    ]
  }
}
